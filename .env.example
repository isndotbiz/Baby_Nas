# Baby NAS Environment Variables
# Copy to .env and fill in your credentials
# DO NOT commit .env to git!

# ============================================
# BABY NAS (Hyper-V VM - Storage Only)
# ============================================
BABY_NAS_IP=10.0.0.88
BABY_NAS_HOSTNAME=baby.isn.biz
BABY_NAS_USER=admin
BABY_NAS_PASSWORD=

# TrueNAS API Key (generate in Web UI: System → API Keys)
BABY_NAS_API_KEY=

# SSH Key Path (for automation)
BABY_NAS_SSH_KEY=~/.ssh/baby-nas

# ============================================
# MAIN NAS (Bare Metal - Replication Target)
# ============================================
MAIN_NAS_IP=10.0.0.89
MAIN_NAS_HOSTNAME=baremetal.isn.biz
MAIN_NAS_USER=root
MAIN_NAS_PASSWORD=

# ============================================
# SMB SHARES (Network Drives)
# ============================================
# W: drive - Workspace sync
SMB_WORKSPACE_PATH=\\baby.isn.biz\workspace

# M: drive - Model archive
SMB_MODELS_PATH=\\baby.isn.biz\models

# S: drive - Staging/downloads
SMB_STAGING_PATH=\\baby.isn.biz\staging

# B: drive - Backups
SMB_BACKUPS_PATH=\\baby.isn.biz\backups

# SMB Credentials (if different from BABY_NAS_USER)
SMB_USERNAME=
SMB_PASSWORD=

# ============================================
# REPLICATION (Baby NAS → Main NAS)
# ============================================
REPLICATION_ENABLED=true
REPLICATION_SCHEDULE=daily
REPLICATION_SSH_KEY=~/.ssh/baby-nas-replication

# ============================================
# TAILSCALE (Remote Access)
# ============================================
# Tailscale handles VPN - no WireGuard needed
TAILSCALE_ENABLED=true
